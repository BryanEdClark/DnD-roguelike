{
  "name": "dnd-roguelike-monster-viewer",
  "version": "1.0.0",
  "description": "Local monster viewer with caching for D&D roguelike",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "test": "node run-tests.js",
    "test:character": "node tests/character.test.js",
    "test:encounter": "node tests/encounter.test.js",
    "test:server": "node tests/server.test.js",
